<div class="row text-center">
    <div class="form-signin" style="margin: 0 auto; width: 90%; margin-top: 100px;">
        <h2>Please Sign In</h2>
        <%= form_tag sessions_path do %>
            <div class="field">

                <%= text_field_tag :email, params[:email], class:"form-control text-center mt-5 mb-2", placeholder:"Email Address"%>
            </div>
            <div class="field">
                <%= password_field_tag :password, "", class:"form-control text-center mb-2", placeholder:"Password"%>
            </div>
            <div class="actions">
                <%= submit_tag "Log In",class: "btn btn-lg btn-primary btn-block mt-5",style:"margin: 0 auto; width: 35%;" %>
            </div>
            <% end %>
    </div>
</div>



